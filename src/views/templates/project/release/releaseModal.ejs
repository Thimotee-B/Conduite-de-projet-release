<div class="modal fade" id="releaseModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Ajouter une release</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="/projectView/<%=project._id%>/createRelease" method="POST" enctype="multipart/form-data">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Titre de la release:<span class="red">*</span></label>
                        <input class="form-control rounded-0" type="text" id="title" name="title" placeholder="release <%=project.projectName%> version 1" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description:<span class="red">*</span></label>
                        <textarea class="form-control rounded-0" id="description" name="description"
                            placeholder="&bull; correction du bug ..." rows="3" maxlength="2000" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="releaseFile">SÃ©lectionnez un fichier: (format <kbd>.zip</kbd> obligatoire)<span class="red">*</span></label>
                        <input class="form-control rounded-0" type="file" id="releaseFile" name="releaseFile" required>
                    </div>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Valider</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>