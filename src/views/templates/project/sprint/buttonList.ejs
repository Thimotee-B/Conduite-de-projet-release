<div class="modal fade" id="createSprintModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Nouveau Sprint #<%= project.nbSprint+1 %></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="/projectView/<%= project._id %>/createSprint" method="POST">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="beginDate">Date du d√©but du sprint:<span class="red">*</span></label>
                        <input type="date" class="form-control rounded-0" id="beginDate" name="beginDate" required> 

                        <label for="description">Description du sprint:<span class="red">*</span></label>
                        <textarea class="form-control rounded-0" id="description" name="description" placeholder="information sur le sprint ..." rows="3" maxlength="500" required></textarea>
                    </div>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Valider</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                </div>

            </form>




        </div>
    </div>
</div>