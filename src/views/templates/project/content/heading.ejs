<% if (project.role ==  'Scrum Master'){%>
<div class="modal fade" id="modifyProject">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modifier le projet</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form action="/projectView/<%=project._id%>/updateProject" method="POST">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="projectName">Nom du projet<span class="red">*</span></label>
                        <input type="text" class="form-control" id="projectName" name="projectName" required value="<%=project.projectName%>">
                    </div>
                    <div class="form-group">
                        <label for="projectDesc">Description</label>
                        <textarea class="form-control rounded-0" id="projectDesc" name="projectDesc" placeholder="Description du projet" rows="3" maxlength="2000"><%=project.projectDesc%></textarea>
                    </div>
                    <div class="form-group">
                        <label for="sprintDelay">Durée d'un sprint par défault (en semaine)</label>
                        <input type="number" class="form-control rounded-0" min="1" max="54" id="sprintDelay" name="sprintDelay" value="<%=project.sprintDelay%>">
                    </div>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Valider</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                </div>

            </form>




        </div>
    </div>
</div>
<%}%>