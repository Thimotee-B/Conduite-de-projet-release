<div class="modal fade" id="docModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Ecrire une documentation</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="/projectView/<%=project._id%>/createDoc" method="POST" enctype="multipart/form-data">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Titre :<span class="red">*</span></label>
                        <input class="form-control rounded-0" type="text" id="title" name="title" required>
                    </div>
                    <div class="form-group" >
                        <label for="content">Contenu :<span class="red">*</span></label>
                        <textarea class="form-control rounded-0" id="editor" name="content" maxlength="8000"></textarea>
                    </div>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Valider</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>