<div class="row">
    <div class="col-lg-8">
        <% for(var i = 0; i < project.doc.length; i++) {%>
            <div class="card mb-4">
                <!-- Card Header - Dropdown -->
                <div href="#collapseCard<%=i%>" class="card-header py-3 d-flex flex-row align-items-center justify-content-between" data-toggle="collapse"
                role="button" aria-expanded="true" aria-controls="collapseCard<%=i%>">
                    <h6 class="m-0 font-weight-bold text-primary"><%= project.doc[i].title %></h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                            aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Informations :</div>
                            <a class="dropdown-item" href="#">Date : <%= project.doc[i].date %> </a>
                            <a class="dropdown-item" href="#">Release : <%= project.doc[i].release %></a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/projectView/<%=project._id%>/removeDoc/<%=i%>">Supprimer la doc</a>
                        </div>
                    </div>
                </div>
                <!-- Card Body -->
                <% if (i == 0) { %>
                <div class="collapse show" id="collapseCard<%=i%>">
                <% } else { %>
                <div class="collapse hide" id="collapseCard<%=i%>">
                <% } %>
                    <div class="card-body">
                        <%- project.doc[i].content %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>